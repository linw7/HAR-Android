<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:background="@drawable/popmenu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="2017"
            android:textSize="20sp"
            android:clickable="true"
            android:id="@+id/btn2017" />

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="2016"
            android:textSize="20sp"
            android:id="@+id/btn2016" />

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="2015"
            android:textSize="20sp"
            android:id="@+id/btn2015" />

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="更早"
            android:textSize="20sp"
            android:id="@+id/btnLater" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aab2bd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="春"
            android:textSize="20sp"
            android:id="@+id/btnSpr" />

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="center_vertical"
            android:text="夏"
            android:textSize="20sp"
            android:id="@+id/btnSummr" />

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="center_vertical"
            android:text="秋"
            android:textSize="20sp"
            android:id="@+id/btnAutn" />

        <TextView
            android:textColor="#aab2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="center_vertical"
            android:text="冬"
            android:textSize="20sp"
            android:id="@+id/btnWintr" />
    </LinearLayout>

</LinearLayout>