                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/editor_mid"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:minHeight="40dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_weight="9"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="15.0dip"
                            android:text="年龄"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp"
                            android:id="@+id/setting_sle_len" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="2"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:src="@drawable/arrow_forward_7f8c8d" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/more_page_row6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/editor_mid"
                        android:minHeight="0dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_weight="9"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="15.0dip"
                            android:text="科室"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/setting_clt_tight"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="2"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:src="@drawable/arrow_forward_7f8c8d" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/more_page_row7"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/editor_mid"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:minHeight="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_weight="9"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="15.0dip"
                            android:text="病床号"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#ff333333"
                            android:textSize="16.0sp"
                            android:id="@+id/setting_nckl_shp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="2"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:src="@drawable/arrow_forward_7f8c8d" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/more_page_row8"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/editor_mid"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:minHeight="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_weight="9"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="入院时间"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/setting_stmp_sty"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="2"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:src="@drawable/arrow_forward_7f8c8d" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/more_page_row9"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/editor_bottom"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:minHeight="40dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_weight="9"
                            android:drawablePadding="10.0dip"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingLeft="17.0dip"
                            android:text="主治医师"
                            android:textColor="#ff333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            android:id="@+id/setting_prf_color" />

                        <ImageView
                            android:layout_width="0dp"
