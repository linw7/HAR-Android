<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lele.protoui.RankStandActivity"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rank_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/stand_r" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:text="金鸡独立"/>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#f8f8f8">

            <ImageView
                android:id="@+id/rank_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ch_1" />

            <TextView
                android:id="@+id/name_1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="关羽" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <TextView
                android:id="@+id/time_1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="20分10秒" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#f8f8f8">

            <ImageView
                android:id="@+id/rank_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ch_2" />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="张飞" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <TextView
                android:id="@+id/time_2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="20分10秒" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#f8f8f8">

            <ImageView
                android:id="@+id/rank_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ch_3" />

            <TextView
                android:id="@+id/name_3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="刘备" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <TextView
                android:id="@+id/time_3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="20分10秒" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
